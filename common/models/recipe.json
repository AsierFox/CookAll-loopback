{
  "name": "Recipe",
  "plural": "recipes",
  "base": "PersistedModel",
  "description": "This model contains the information of a recipe.",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "hidden": [
    "updatedAt",
    "deletedAt"
  ],
  "properties": {
    "title": {
      "type": "string",
      "required": true,
      "index": true,
      "length": 150
    },
    "description": {
      "type": "string",
      "required": true
    },
    "cookingTime": {
      "type": "string",
      "required": true,
      "length": 10
    },
    "calories": {
      "type": "number",
      "dataType": "float",
      "precision": 6,
      "scale": 2
    },
    "likes": {
      "type": "number",
      "required": true,
      "dataType": "int",
      "length": 5,
      "default": 0
    },
    "favorites": {
      "type": "number",
      "required": true,
      "dataType": "int",
      "length": 5,
      "default": 0
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "dataType": "datetime",
      "defaultFn": "now"
    },
    "updatedAt": {
      "type": "date",
      "required": true,
      "dataType": "datetime",
      "defaultFn": "now"
    },
    "deletedAt": {
      "type": "date",
      "dataType": "datetime"
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "RecipeComment",
      "foreignKey": "recipeId"
    },
    "ingredients": {
      "type": "hasMany",
      "model": "Ingredient",
      "foreignKey": "recipeId"
    },
    "steps": {
      "type": "hasMany",
      "model": "RecipeStep",
      "foreignKey": "recipeId"
    },
    "categories": {
      "type": "hasMany",
      "model": "RecipeCategory",
      "foreignKey": "recipeId"
    },
    "mainPhoto": {
      "type": "hasOne",
      "model": "RecipeMainPhoto",
      "foreignKey": "recipeId"
    },
    "photos": {
      "type": "hasMany",
      "model": "RecipePhoto",
      "foreignKey": "recipeId"
    },
    "madeIts": {
      "type": "hasMany",
      "model": "MadeIt",
      "foreignKey": "recipeId"
    },
    "profile": {
      "type": "belongsTo",
      "model": "Profile",
      "foreignKey": "profileId"
    }
  },
  "acls": [],
  "methods": {}
}
