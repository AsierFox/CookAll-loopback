{
  "name": "Recipe",
  "plural": "recipes",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true,
      "index": true,
      "length": 150
    },
    "description": {
      "type": "string",
      "required": true
    },
    "cookingTime": {
      "type": "string",
      "required": true,
      "length": 10
    },
    "calories": {
      "type": "number",
      "dataType": "float",
      "precision": 4,
      "scale": 2
    },
    "likes": {
      "type": "number",
      "required": true,
      "dataType": "int",
      "length": 5,
      "default": 0
    },
    "favorites": {
      "type": "number",
      "required": true,
      "dataType": "int",
      "length": 5,
      "default": 0
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "dataType": "datetime",
      "defaultFn": "now"
    },
    "updatedAt": {
      "type": "date",
      "required": true,
      "dataType": "datetime",
      "defaultFn": "now"
    },
    "deletedAt": {
      "type": "date",
      "dataType": "datetime",
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "RecipeComment",
      "foreignKey": "recipe_id",
      "options": {
        "nestRemoting": true,
        "disableInclude": true
      }
    },
    "ingredients": {
      "type": "hasMany",
      "model": "Ingredient",
      "foreignKey": "recipeId",
      "options": {
        "nestRemoting": false,
        "disableInclude": true
      }
    },
    "steps": {
      "type": "hasMany",
      "model": "RecipeStep",
      "foreignKey": "recipeId",
      "options": {
        "nestRemoting": false,
        "disableInclude": true
      }
    },
    "categories": {
      "type": "hasMany",
      "model": "RecipeCategory",
      "foreignKey": "recipeId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {}
}
