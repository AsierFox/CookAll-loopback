{
  "apps": [
    {
      "name": "cookall-api-server",
      "script": "server/server.js",
      "port": "3000",
      "watch": true,
      "ignore_watch": ["./logs", "*.log"],
      "watch_options": {
        "usePolling": true
      },
      "error_file": "./logs/app-error.log",
      "out_file": "./logs/app-out.log",
      "env": {
        "NODE_ENV": "dev"
      },
      "env_production": {
        "NODE_ENV": "prod"
      }
    }
  ]
}
